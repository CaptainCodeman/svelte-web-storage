{
	"name": "svelte-web-storage",
	"version": "0.0.3",
	"homepage": "https://captaincodeman.github.io/svelte-web-storage/",
	"repository": {
		"type": "git",
		"url": "https://github.com/captaincodeman/svelte-web-storage.git"
	},
	"author": {
		"name": "Simon Green",
		"email": "simon@captaincodeman.com",
		"url": "https://www.captaincodeman.com/"
	},
	"keywords": [
		"svelte",
		"svelte-kit",
		"writable",
		"store",
		"stores",
		"webstorage",
		"web-storage",
		"localstorage",
		"local-storage",
		"sessionstorage",
		"session-storage",
		"persist",
		"persisted",
		"persistence"
	],
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && tsup && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/kit": "^1.27.3",
		"@sveltejs/package": "^2.2.2",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"publint": "^0.2.5",
		"svelte": "^4.2.2",
		"svelte-check": "^3.5.2",
		"tslib": "^2.6.2",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"type": "module",
	"dependencies": {
		"esm-env": "^1.0.0"
	}
}
